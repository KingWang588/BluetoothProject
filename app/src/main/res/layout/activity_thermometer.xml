<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/is_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textColor="#000"
            android:gravity="center"
            android:padding="10dp"/>

        <Button
            android:id="@+id/thermometer_button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="检测蓝牙是否打开" />

        <Button
            android:id="@+id/thermometer_button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开蓝牙" />

        <Button
            android:id="@+id/thermometer_button_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭蓝牙" />

        <Button
            android:id="@+id/thermometer_button_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="扫描蓝牙设备" />

        <TextView
            android:id="@+id/thermometer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.cj.bluetoothproject.MyListView
            android:id="@+id/thermometer_listView_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/thermometer_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>